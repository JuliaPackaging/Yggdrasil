# Simple toolchain template file for gcc running on {{ARCH}} {{OS}}
set(CMAKE_SYSTEM_NAME {{OS}})
set(CMAKE_SYSTEM_PROCESSOR {{ARCH}})

set(CMAKE_SYSROOT /opt/{{TARGET}}/{{TARGET}}/sys-root/)
set(CMAKE_INSTALL_PREFIX $ENV{prefix})

set(CMAKE_C_COMPILER   /opt/bin/{{TARGET}}-gcc)
set(CMAKE_CXX_COMPILER /opt/bin/{{TARGET}}-g++)
set(CMAKE_Fortran_COMPILER /opt/bin/{{TARGET}}-gfortran)

set(CMAKE_LINKER  /opt/bin/{{TARGET}}-ld)
set(CMAKE_OBJCOPY /opt/bin/{{TARGET}}-objcopy)

set(CMAKE_AR     /opt/{{TARGET}}/bin/{{TARGET}}-ar)
set(CMAKE_NM     /opt/{{TARGET}}/bin/{{TARGET}}-nm)
set(CMAKE_RANLIB /opt/{{TARGET}}/bin/{{TARGET}}-ranlib)

if( $ENV{CC} MATCHES ccache )
    set_property(GLOBAL PROPERTY RULE_LAUNCH_COMPILE ccache)
endif()

