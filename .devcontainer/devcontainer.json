{
  "features": {
    "ghcr.io/julialang/devcontainer-features/julia:1": {
      "channel": "1.7"
    },
  },
  "containerEnv": {
    "JULIA_PROJECT": ".ci"
  },
  "hostRequirements": {
    "gpu": "optional"
  },
  "privileged": true,
  "onCreateCommand": "julia -e 'using Pkg; Pkg.instantiate(); Pkg.precompile();'"
}
