-  )
-
-#Removes flag due to issue with Google test download when LLVM_ENABLE_WERROR=On
-string(REPLACE "-Wcovered-switch-default" "" CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS}")
-
